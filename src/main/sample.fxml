<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Controller">
    <MenuBar VBox.vgrow="NEVER">
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" text="New" />
            <MenuItem mnemonicParsing="false" text="Open…" />
            <Menu mnemonicParsing="false" text="Open Recent" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Close" />
            <MenuItem mnemonicParsing="false" text="Save" />
            <MenuItem mnemonicParsing="false" text="Save As…" />
            <MenuItem mnemonicParsing="false" text="Revert" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Preferences…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" />
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
            <Menu mnemonicParsing="false" text="Add">
                <MenuItem fx:id="InputImage" mnemonicParsing="false" onAction="#InputOnAction" text="Input Image" />
                <MenuItem fx:id="OutputImage" mnemonicParsing="false" onAction="#OutputOnAction" text="Output" />
                <MenuItem fx:id="SeparateRGB" mnemonicParsing="false" onAction="#SeparateOnAction" text="Separate RGB" />
                <MenuItem fx:id="CombineRGBA" mnemonicParsing="false" onAction="#CombineOnAction" text="Combine RGB" />
                <Menu mnemonicParsing="false" text="Math">
                    <MenuItem fx:id="Add" mnemonicParsing="false" onAction="#AddOnAction" text="Add" />
                    <MenuItem fx:id="Subtract" mnemonicParsing="false" onAction="#SubtractOnAction" text="Subtract" />
                    <MenuItem fx:id="Multiply" mnemonicParsing="false" onAction="#MultiplyOnAction" text="Multiply" />
                    <MenuItem fx:id="Divide" mnemonicParsing="false" onAction="#DivideOnAction" text="Divide" />
                    <MenuItem fx:id="Formatter" mnemonicParsing="false" onAction="#FormatterOnAction" text="Formatter" />
                </Menu>
            </Menu>
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Undo" />
            <MenuItem mnemonicParsing="false" text="Redo" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Cut" />
            <MenuItem mnemonicParsing="false" text="Copy" />
            <MenuItem mnemonicParsing="false" text="Paste" />
            <MenuItem mnemonicParsing="false" text="Delete" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Select All" />
            <MenuItem mnemonicParsing="false" text="Unselect All" />
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" text="About" />
        </Menu>
    </MenuBar>
    <AnchorPane fx:id="root" VBox.vgrow="ALWAYS" />
</VBox>
